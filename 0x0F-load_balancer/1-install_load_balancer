#!/usr/bin/env bash
# Bash script Install and configure HAproxy on lb-01 server.
apt-get install -y --no-install-recommends software-properties-common
add-apt-repository -y ppa:vbernat/haproxy-2.9
apt-get -y update
apt-get install -y haproxy=2.9.\*

echo "ENABLED=1" > /etc/default/haproxy
echo "
   listen load_balancer
   bind *:80
   mode http
   balance roundrobin
   option httpclose
   option forwardfor
   server 440041-web-01 100.24.74.240:80 check
   server 440041-web-02 100.26.212.140:80 check
" >> /etc/haproxy/haproxy.cfg

service haproxy start
